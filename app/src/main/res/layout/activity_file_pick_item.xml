<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/layoutpadding_all"
    android:background="?android:attr/selectableItemBackground">

    <TextView
        android:id="@+id/filepick_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="middle"
        android:singleLine="true"
        android:text="reallyreallyreallyreallyreallyreallyreallycoolimagename.jpg"
        android:textSize="18sp"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/filepick_tv_sizelabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/filepick_tv_name"
        android:text="Size: "/>
    <TextView
        android:id="@+id/filepick_tv_sizevalue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="218.9 kB"
        android:layout_below="@id/filepick_tv_name"
        android:layout_toEndOf="@id/filepick_tv_sizelabel"/>

</RelativeLayout>