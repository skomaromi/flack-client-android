<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/filepick_srl"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/filepick_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <include
            android:id="@+id/filepick_el_noconnection"
            layout="@layout/element_no_connection_message" />

        <TextView
            android:id="@+id/filepick_tv_nofiles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_file_tv_nofiles"
            android:textSize="18sp"
            android:layout_margin="@dimen/layoutpadding_all"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:visibility="gone"/>

    </FrameLayout>

</android.support.v4.widget.SwipeRefreshLayout>